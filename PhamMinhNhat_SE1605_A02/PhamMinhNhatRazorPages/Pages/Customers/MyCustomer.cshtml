@page
@model PhamMinhNhatRazorPages.Pages.Customers.MyCustomerModel
@{
}
@if (Model.CustomerModel != null)
{
    <div class="container" style="width: 24%; margin-top: 52px">
        <h2 class="text-center">My Profile</h2>
        <form method="post">
            <!-- Email input -->
            <div class="form-outline mb-4">
                <label class="form-label" for="form2Example1">Id</label>
                <input type="text" id="form2Example1" class="form-control" name="customerId" asp-for="CustomerModel.CustomerId" readonly/>
            </div>

            <!-- Password input -->
            <div class="form-outline mb-4">
                <label class="form-label" for="form2Example2">Name</label>
                <input type="text" id="form2Example2" class="form-control" name="customerName" asp-for="CustomerModel.CustomerName" />
            </div>
            <!-- Password input -->
            <div class="form-outline mb-4">
                <label class="form-label" for="form2Example2">Email</label>
                <input type="email" id="form2Example2" class="form-control" name="email"  asp-for="CustomerModel.Email" />
            </div>
            <!-- Password input -->
            <div class="form-outline mb-4">
                <input type="text" id="form2Example2" class="form-control" name="city" asp-for="CustomerModel.City" />
                <label class="form-label" for="form2Example2">City</label>
            </div>
            <!-- Password input -->
            <div class="form-outline mb-4">
                <label class="form-label" for="form2Example2">Country</label>
                <input type="text" id="form2Example2" class="form-control" name="country" asp-for="CustomerModel.Country" />
            </div>
            <!-- Password input -->
            <div class="form-outline mb-4">
                <label class="form-label" for="form2Example2">Birthday</label>
                <input type="date" id="form2Example2" class="form-control" name="birthday" asp-for="CustomerModel.Birthday" />
            </div>

            <!-- Submit button -->
            <button type="submit" class="btn btn-primary btn-block mb-4">Save</button>

        </form>
    </div>
}
else
{
    <p>No Information</p>
}

