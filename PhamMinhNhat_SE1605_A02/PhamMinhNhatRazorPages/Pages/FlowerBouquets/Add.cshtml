@page
@model PhamMinhNhatRazorPages.Pages.FlowerBouquets.AddModel
@{
    var messageId = ViewData["messageId"]?.ToString();
    var messageInput = ViewData["messageInput"]?.ToString();
}

<div class="container" style="width: 24%; margin-top: 52px">
    <h2 class="text-center">ADD</h2>

    @if (!string.IsNullOrWhiteSpace(messageId))
    {
        <div class="alert alert-success" role="alert">
            @messageId
        </div>
    }
    @if (!string.IsNullOrWhiteSpace(messageInput))
    {
        <div class="alert alert-danger" role="alert">
            @messageInput
        </div>
    }

    <form method="post" >
        <div class="form-outline mb-4">
            <label class="form-label" for="form2Example1" >Id</label>
            <input type="number" id="form2Example1" class="form-control" asp-for="AddFlowerBouquet.FlowerBouquetId" min="0"/>
        </div>

        <div class="form-outline mb-4">
            <label class="form-label" for="form2Example2">Name</label>
            <input type="text" id="form2Example2" class="form-control" asp-for="AddFlowerBouquet.FlowerBouquetName"/>
        </div>
        <div class="form-outline mb-4">
            <label class="form-label" for="form2Example2">Description</label>
            <input type="text" id="form2Example2" class="form-control" asp-for="AddFlowerBouquet.Description"/>
        </div>
        <div class="form-outline mb-4">
            <label class="form-label" for="form2Example2">Unit Price</label>
            <input type="number" id="form2Example2" class="form-control" asp-for="AddFlowerBouquet.UnitPrice" min="0"/>
        </div>
        <div class="form-outline mb-4">
            <label class="form-label" for="form2Example2" >Units In Stock</label>
            <input type="number" id="form2Example2" class="form-control" asp-for="AddFlowerBouquet.UnitsInStock" min="0"/>
        </div>
        @if(Model.OptionCategories != null && Model.OptionCategories.Any())
        {
            <div class="form-outline mb-4">
                <label class="form-label" for="form2Example2">Category</label>
                <select class="form-outline mb-4" id="form2Example2" asp-for="AddFlowerBouquet.CategoryId">
                    @foreach (var c in Model.OptionCategories)
                    {
                        <option value="@c.CategoryId">@c.CategoryName</option>
                    }

                </select>
            </div>
        }
        @if(Model.OptionSuppliers != null && Model.OptionSuppliers.Any())
        {
            <div class="form-outline mb-4">
                <label class="form-label" for="form2Example2">Supplier</label>
                <select class="form-outline mb-4" id="form2Example2" asp-for="AddFlowerBouquet.SupplierId">
                    @foreach (var s in Model.OptionSuppliers)
                    {
                        <option value="@s.SupplierId">@s.SupplierName</option>
                    }
                </select>
            </div>
        }
        

        <!-- Submit button -->
        <button type="submit" class="btn btn-primary btn-block mb-4">Add</button>

    </form>
</div>
